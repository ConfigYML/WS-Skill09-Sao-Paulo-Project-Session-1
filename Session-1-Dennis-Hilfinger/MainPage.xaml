<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Session_1_Dennis_Hilfinger.MainPage">

    <Grid 
        RowDefinitions="*, 5*, *"
        ColumnDefinitions="*"
        VerticalOptions="Fill"
        HorizontalOptions="Fill">
        <Grid 
            ColumnDefinitions="*,4*,*"
            HorizontalOptions="Fill"
            VerticalOptions="End">
            <Image 
                Source="logo_2015_full_colour.png"
                Margin="20"/>
            <Label 
                Grid.Column="1"
                FontSize="32"
                Text="MarathonSkills 2015"
                HorizontalTextAlignment="Center"
                VerticalTextAlignment="Center"
                Padding="20"/>
        </Grid>


        <VerticalStackLayout
            Grid.Row="1"
            Padding="30"
            Spacing="25"
            VerticalOptions="Center">

            <Button
                Text="Import staff data"
                Style="{StaticResource ButtonGreen}"
                HorizontalOptions="End"
                Clicked="ImportStaffData"/>

            <Label 
                Text="Sao Paulo, Brazil"
                HorizontalOptions="Center"
                FontSize="32"/>
            <Label 
                Text="Saturday September 5th 2015"
                HorizontalOptions="Center"
                FontSize="32"/>

            <Button
                Text="I want to be a runner"
                WidthRequest="300"
                HeightRequest="50"
                FontSize="16"
                Style="{StaticResource ButtonYellow}"
                HorizontalOptions="Center"/>

            <Button
                Text="I want to sponsor a runner"
                WidthRequest="300"
                HeightRequest="50"
                FontSize="16"
                Style="{StaticResource ButtonYellow}"
                HorizontalOptions="Center"/>

            <Button
                Text="I want to find out more"
                WidthRequest="300"
                HeightRequest="50"
                FontSize="16"
                Style="{StaticResource ButtonYellow}"
                HorizontalOptions="Center"/>

            <Button
                Text="Login"
                Style="{StaticResource ButtonBlue}"
                HorizontalOptions="End"/>

        </VerticalStackLayout>

        <Label 
            Grid.Row="2"
            HorizontalOptions="Fill"
            VerticalOptions="End"
            Text="0 days 0 hours 0 minutes until the race starts!"
            HorizontalTextAlignment="Center"
            Padding="20"
            Style="{StaticResource TimerLabel}"/>
    </Grid>

</ContentPage>
